<link rel="stylesheet" href="/css/header.css">


<header >
  <a id="header-title" href="/"><h2> Doubt IO || Home </h2></a>

  <ul>
    <% if (locals.user && locals.user.type == 'student'){ %>

          <li>
           <a href="/student/home"><h3 class="student"><i class="fas fa-user Color"></i> <%=  user.name %></h3></a>
          </li>
          
          <li>
            <button><a href="/sign-out">Sign Out</a></button>
          </li>



        <% }else if (locals.user && locals.user.type == "mentor"){ %>

          <li>
            <a href="/mentor/home"><h3 class="mentor"><i class="fas fa-user Color"></i><%= user.name %></h3></a>
          </li>
          
          <li>
            <button><a href="/sign-out">Sign Out</a></button>
          </li>

    <% }else{ %>
      <li>
        <button><a href="/login">Sign In</a></button>
      </li>

      <li>
        <button><a href="/register">Sign Up</a></button>
      </li>

      <% } %>
  </ul>
</header>